@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-white">
    <div class="app">
        <div class="shelter">
            <div class="columns">
                <div class="col-4"></div>
                <div class="col-4">
                    <div class="py-2">
                        <h1 class="text-center"><a class="text-blue logo" href="@Url.Action("Index", "Home")">Kommunity</a></h1>
                        <h2 class="text-center text-grey">Forgot Password</h2>
                        <div class="form-card">
                            <form asp-action="ForgotPassword" method="post">
                                <span class="js__errormsg"></span>
                                <div class="form-row">
                                    <label for="name">Email:</label>
                                    <input type="email" class="form-control" name="Email" placeholder="Your Email" required minlength="3" maxlength="30">
                                </div>
                               
                                <!-- Display success message if it exists -->
                                @if (ViewBag.SuccessMessage != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.SuccessMessage
                                    </div>
                                }

                                <!-- Display error message if it exists -->
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <button type="submit" class="btn btn-block btn-blue ripple">Recieve Reset Email</button>
                            </form>
                        </div>
                        <div class="other__option">
                            Already have an account? <a class="text-blue" href="@Url.Action("Login", "Auth")">Sign In</a>
                        </div>
                    </div>

                </div>
                <div class="col-4"></div>
            </div>
        </div>
    </div>
    <script src="./assets/js/main.js"></script>
</body>
</html>