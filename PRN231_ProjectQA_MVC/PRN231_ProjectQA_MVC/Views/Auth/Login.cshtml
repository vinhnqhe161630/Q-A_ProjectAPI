@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-white">
<div class="app">
   <div class="shelter">
       <div class="columns">
           <div class="col-4"></div>
           <div class="col-4">
               <div class="py-2">
                    <h1 class="text-center"><a class="text-blue logo" href="index.html">Kommunity</a></h1>
                    <h2 class="text-center text-grey">Sign in to Kommunity</h2>
                    <div class="form-card">
                            <form asp-action="Login" method="post">
                            <span class="js__errormsg"></span>
                            <div class="form-row">
                                <label for="name">Email:</label>
                                <input type="email" class="form-control" name="email" placeholder="Enter your email" required minlength="3" maxlength="30">
                            </div>
                            <div class="form-row">
                                <label for="name">Password</label>
                                <input type="password" class="form-control" name="password" required placeholder="password">
                            </div>
                                <!-- Display error message if it exists -->
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                               <button type="submit" class="btn btn-block btn-blue ripple">Sign In</button> 
                        </form>
                    </div>
                    <div class="other__option">
                            Don't have an account yet? <a class="text-blue" href="@Url.Action("SignUp", "Auth")">Create Account</a>
                    </div>
               </div>
               
           </div>
           <div class="col-4"></div>
       </div>
   </div>
</div>
<script src="./assets/js/main.js"></script>
</body>
</html>