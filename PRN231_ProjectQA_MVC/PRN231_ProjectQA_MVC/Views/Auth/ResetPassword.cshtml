@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-white">
    <div class="app">
        <div class="shelter">
            <div class="columns">
                <div class="col-4"></div>
                <div class="col-4">
                    <div class="py-2">
                        <h1 class="text-center"><a class="text-blue logo" href="index.html">Kommunity</a></h1>
                        <h2 class="text-center text-grey">Reset Password</h2>
                        <div class="form-card">
                            <form asp-action="ResetPassword" method="post" onsubmit="return validatePasswords()">
                                <span class="js__errormsg"></span>
                                <input type="hidden" name="token" value="@ViewBag.Token" />
                                <div class="form-row">
                                    <label for="name">Password</label>
                                    <input type="password" class="form-control" name="password" id="password" required placeholder="Your New Password">
                                </div>
                                <div class="form-row">
                                    <label for="name">Password</label>
                                    <input type="password" class="form-control" id="confirmPassword" required placeholder="Confirm Password">
                                </div>
                                <!-- Display success message if it exists -->
                                @if (ViewBag.SuccessMessage != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.SuccessMessage
                                    </div>
                                }

                                <!-- Display error message if it exists -->
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <button type="submit" class="btn btn-block btn-blue ripple">Reset Password</button>
                            </form>
                        </div>
                        <div class="other__option">
                            Already have an account? <a class="text-blue" href="@Url.Action("Login", "Auth")">Sign In</a>
                        </div>
                    </div>

                </div>
                <div class="col-4"></div>
            </div>
        </div>
    </div>
    <script src="./assets/js/main.js"></script>
    <script>
        function validatePasswords() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;

            if (password !== confirmPassword) {
                alert("Passwords do not match. Please try again.");
                return false;
            }
            return true;
        }
    </script>
</body>
