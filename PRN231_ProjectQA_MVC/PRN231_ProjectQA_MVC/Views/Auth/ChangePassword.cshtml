@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-white">
    <div class="app">
        <div class="shelter">
            <div class="columns">
                <div class="col-4"></div>
                <div class="col-4">
                    <div class="py-2">
                        <h1 class="text-center"><a class="text-blue logo" href="@Url.Action("Index", "Home")">Kommunity</a></h1>
                        <h2 class="text-center text-grey">Reset Password</h2>
                        <div class="form-card">
                            <form asp-action="ChangePassword" method="post" onsubmit="return validatePassword()">
                                <span class="js__errormsg"></span>
                               
                                <div class="form-row">
                                    <label for="name">Old Password</label>
                                    <input type="password" class="form-control" name="OldPassword"  required placeholder="Your old Password">
                                </div>
                                <div class="form-row">
                                    <label for="name">New Password</label>
                                    <input type="password" class="form-control" name="NewPassword" id="NewPassword" required placeholder="Your New Password">
                                </div>
                                <div class="form-row">
                                    <label for="name">Confirm New Password</label>
                                    <input type="password" class="form-control" id="ConfirmPassword" required placeholder="Confirm Password">
                                </div>
                                <!-- Display success message if it exists -->
                                @if (ViewBag.SuccessMessage != null)
                                {
                                    <div class="alert alert-success">
                                        @ViewBag.SuccessMessage
                                    </div>
                                }

                                <!-- Display error message if it exists -->
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <button type="submit" class="btn btn-block btn-blue ripple">Reset Password</button>
                            </form>
                        </div>
                        
                    </div>

                </div>
                <div class="col-4"></div>
            </div>
        </div>
    </div>
    <script src="./assets/js/main.js"></script>
    <script>
        function validatePassword() {
            var newPassword = document.getElementById("NewPassword").value;
            var confirmPassword = document.getElementById("ConfirmPassword").value;

            if (newPassword !== confirmPassword) {
                alert("New Password and Confirm Password do not match.");
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }
    </script>
</body>
